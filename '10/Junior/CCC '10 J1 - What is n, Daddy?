a = int(input())

counter = 0

if a == 5:
  counter = 1
  print(counter)
  quit()
  
elif a > 5:
  leftcounter = 5
  rightcounter = a - leftcounter
  
elif a < 5:
 leftcounter = a
 rightcounter = 0
 
for i in range(a):
  leftcounter -= 1
  rightcounter += 1
  counter += 1
  
  if leftcounter < rightcounter:
    break
    
print(counter)
